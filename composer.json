    "type": "library",
    "license": "GPL",
    "scripts": {
      "lint": "phpcs --standard=PSR12 src/",
      "test": "phpunit ./Tests/",
      "qa": ["@test", "@lint"]
    },
    "authors": [
        {
            "name": "Missional Digerati",
            "email": "info@missionaldigerati.org"
        }
    ],
    "require": {
        "php": "^7.4",
        "guzzlehttp/guzzle": "^7.9.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "squizlabs/php_codesniffer": "^3.7.2"
    },
    "autoload" : {
      "classmap" : [ "src/" ]
    }
}
